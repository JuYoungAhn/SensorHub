doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Sensor Hub
    link(rel='stylesheet', type='text/css', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', type='text/css', href='/bootstrap/theme/local.css')
    script(type='text/javascript', src='/jquery-3.1.0.min.js')
    script(type='text/javascript', src='/bootstrap/js/bootstrap.min.js')
    // you need to include the shieldui css and js assets in order for the charts to work
    link(rel='stylesheet', type='text/css', href='http://www.shieldui.com/shared/components/latest/css/light-bootstrap/all.min.css')
    link#gridcss(rel='stylesheet', type='text/css', href='http://www.shieldui.com/shared/components/latest/css/dark-bootstrap/all.min.css')
    script(type='text/javascript', src='http://www.shieldui.com/shared/components/latest/js/shieldui-all.min.js')
    script(type='text/javascript', src='http://www.prepbootstrap.com/Content/js/gridData.js')
    script(type='text/javascript' src='/jquery-3.1.0.min.js')
    script(type='text/javascript' src='/netatmo.js')
    script(type='text/javascript' src='/enertalk.js')
    script(type='text/javascript' src='/foobot.js')
    script(type='text/javascript' src='/common.js')
    link(href='/style.css', rel='stylesheet')
  body
    #wrapper
      nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Sensor Hub
        .collapse.navbar-collapse.navbar-ex1-collapse
          ul#active.nav.navbar-nav.side-nav
            li.selected
              a(href='/#navigater')
                i.fa.fa-bullseye
                |  Home
            if session.netatmo_access_token != null
              li
                a(href='/#netatmo' onclick='netatmoDashboard()')
                  i.fa.fa-bullseye
                  | Netatmo
            if session.enertalk_access_token != null
              li
                a(href='/#enertalk' onclick="enertalkDashboard()")
                  i.fa.fa-bullseye
                  | Enertalk
            if session.foobot_auth_token != null
              li
                a(href='/#foobot' onclick="foobotDashboard()")
                  i.fa.fa-bullseye
                  | Foobot
            li
              a(href='/sensorthings/things')
                i.fa.fa-bullseye
                | Things
            li
              a(href='/sensorthings/sensor')
                i.fa.fa-bullseye
                | Sensor
          ul.nav.navbar-nav.navbar-right.navbar-user
            li.dropdown.messages-dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.fa.fa-envelope
                |  KIST IMRC
            li.divider-vertical
            li
              form.navbar-search
                input.form-control(type='text', placeholder='Search')
      #page-wrapper
        .row
          .col-lg-12
        body
          block content
